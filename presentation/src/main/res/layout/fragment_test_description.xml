<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.testdescription.TestDescriptionFragment">


    <TextView
        android:id="@+id/test_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/hello_blank_fragment" />

    <TextView
        android:id="@+id/test_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        tools:text="DESCRIPTION" />

    <TextView
        android:id="@+id/quantity_of_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Quantity of Question" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/begin_test_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="@string/begin_test"
        android:layout_height="wrap_content"/>

</LinearLayout>